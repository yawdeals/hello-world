        <search base="events">
          <query> |rex field=mitre_tactic_combined "- (?&lt;mitre_tactic_name&gt;.*)"| chart sparkline sum(risk_score) as Score values(mitre_tactic_name)  as "ATT&amp;CK Tactics" by search_name|sort -Score|head 10</query>
